<Page x:Class="StudentManagementSystem.Pages.AddTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Title="Add Task">
    <StackPanel>
        <TextBox x:Name="StudentIdTextBox" Text="Enter Student ID"/>
        <DatePicker x:Name="DeadlineDatePicker" DisplayDateStart="{x:Static sys:DateTime.Now}"/>
        <TextBox x:Name="SubjectTextBox" Text="Enter Subject"/>
        <TextBox x:Name="DescriptionTextBox" Text="Enter Description"/>
        <Button Content="Add Task" Click="AddTask_Click"/>
    </StackPanel>
</Page>

