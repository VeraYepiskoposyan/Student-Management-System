<Page x:Class="StudentManagementSystem.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Home Page">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Register" Click="Register_Click" Margin="5"/>
            <Button Content="Log In" Click="LogIn_Click" Margin="5"/>
            <Button Content="View Students Exams Score" Click="ExamsScore_Click" Margin="5"/>
            <Button Content="View Events" Click="Events_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
