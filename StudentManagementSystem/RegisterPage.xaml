<Page x:Class="StudentManagementSystem.Pages.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="RegisterPage">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Register" FontSize="24" FontWeight="Bold" Margin="5"/>

            <RadioButton Content="Student" x:Name="StudentRadioButton" IsChecked="True" Margin="5"/>
            <RadioButton Content="Professor" x:Name="ProfessorRadioButton" Margin="5"/>

            <TextBlock Text="ID:" Margin="5"/>
            <TextBox x:Name="IDTextBox" Margin="5"/>

            <TextBlock Text="Name:" Margin="5"/>
            <TextBox x:Name="NameTextBox" Margin="5"/>

            <TextBlock Text="Surname:" Margin="5"/>
            <TextBox x:Name="SurnameTextBox" Margin="5"/>

            <TextBlock Text="Email:" Margin="5"/>
            <TextBox x:Name="EmailTextBox" Margin="5"/>

            <TextBlock Text="Password:" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Margin="5"/>

            <TextBlock Text="Subject:" Margin="5" Visibility="Collapsed" x:Name="SubjectLabel"/>
            <TextBox x:Name="SubjectTextBox" Margin="5" Visibility="Collapsed"/>

            <Button Content="Register" Click="Register_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
