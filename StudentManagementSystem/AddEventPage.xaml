<Page x:Class="StudentManagementSystem.Pages.AddEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      Title="Add Event">
    <Grid>
        <StackPanel>
            <DatePicker x:Name="EventDatePicker" DisplayDateStart="{x:Static sys:DateTime.Now}"/>
            <TextBox x:Name="DescriptionTextBox" Text="Enter description here"/>
            <Button Content="Add Event" Click="AddEvent_Click"/>
        </StackPanel>
    </Grid>
</Page>