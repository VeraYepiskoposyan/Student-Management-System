<Page x:Class="StudentManagementSystem.Pages.ExamsScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Exams Score">
    <Grid>
        <TextBlock Text="Exams Score" FontSize="24" FontWeight="Bold" Margin="20"/>

        <DataGrid x:Name="ExamsScoreDataGrid" AutoGenerateColumns="False" Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Student Name" Binding="{Binding StudentName}" />
                <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" />
                <DataGridTextColumn Header="Score" Binding="{Binding Score}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
